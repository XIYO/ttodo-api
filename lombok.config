# Lombok Configuration for TTODO API
# Enforces consistent coding standards across the project

# ============================================================================
# Field Access Control (Critical)
# ============================================================================
# All fields without explicit access modifier become 'private final'
lombok.fieldDefaults.defaultPrivate = true
lombok.fieldDefaults.defaultFinal = true

# ============================================================================
# Constructor Configuration
# ============================================================================
# NoArgsConstructor: protected by default for JPA compatibility
lombok.noArgsConstructor.extraPrivate = false

# AllArgsConstructor: should be explicitly configured per class
# Builder: standard naming
lombok.builder.className = Builder

# ============================================================================
# Equals & HashCode Configuration
# ============================================================================
# Prevent accidental inclusion of all fields (especially lazy collections)
lombok.equalsAndHashCode.doNotUseGetters = false
lombok.equalsAndHashCode.flagUsage = warning

# ============================================================================
# ToString Configuration
# ============================================================================
# Prevent N+1 issues with lazy-loaded associations
lombok.toString.doNotUseGetters = false
lombok.toString.flagUsage = warning

# ============================================================================
# Getter/Setter Configuration
# ============================================================================
# Flag @Setter usage as warning (prefer immutability)
lombok.setter.flagUsage = warning

# Flag @Data usage as warning (prefer explicit @Getter/@Builder)
lombok.data.flagUsage = warning

# ============================================================================
# Other Lombok Features
# ============================================================================
# Allow @Builder on constructors and classes
lombok.builder.flagUsage = ALLOW

# Allow @RequiredArgsConstructor for dependency injection
lombok.requiredArgsConstructor.flagUsage = ALLOW

# Flag @Value usage as warning (prefer records for DTOs)
lombok.value.flagUsage = warning

# ============================================================================
# Code Generation
# ============================================================================
# Add @Generated annotation to generated code
lombok.addLombokGeneratedAnnotation = true

# Suppress warnings in generated code
lombok.addSuppressWarnings = true

# ============================================================================
# Logging
# ============================================================================
# @Slf4j configuration
lombok.log.fieldName = log
lombok.log.fieldIsStatic = true
lombok.log.flagUsage = ALLOW
