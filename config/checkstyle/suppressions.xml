<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
        "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
        "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<suppressions>
    <!-- Swagger 어노테이션이 있는 클래스의 한글 문자열 허용 -->
    <suppress checks="RegexpSingleline"
              files=".*Command\.java|.*Query\.java|.*Response\.java|.*Request\.java|.*Dto\.java"/>

    <!-- 테스트 파일에서 한글 문자열 허용 -->
    <suppress checks="RegexpSingleline"
              files=".*Test\.java|.*Tests\.java|.*TestConfiguration\.java"/>

    <!-- DataInitializer는 초기 데이터 설정이므로 예외 허용 -->
    <suppress checks="IllegalTokenText"
              files="DataInitializer\.java"/>

    <!-- Configuration 클래스는 설정 값이므로 일부 하드코딩 허용 -->
    <suppress checks="IllegalTokenText"
              files=".*Configuration\.java"/>

    <!-- 엔티티 클래스의 toString 메서드는 디버깅용이므로 허용 -->
    <suppress checks="IllegalTokenText"
              files=".*Entity\.java"/>

    <!-- 상수 클래스에서는 매직 넘버 허용 -->
    <suppress checks="MagicNumber"
              files="ValidationConstants\.java|ApiPaths\.java|ErrorCode\.java|PermissionType\.java"/>

    <!-- 테스트 파일에서 매직 넘버 허용 -->
    <suppress checks="MagicNumber"
              files=".*Test\.java|.*Tests\.java"/>

    <!-- application.yml 경로에서 RegexpSinglelineJava 억제 -->
    <suppress checks="RegexpSinglelineJava"
              files="ValidationConstants\.java|ApiPaths\.java"/>

    <!-- Properties 클래스에서 매직 넘버 허용 -->
    <suppress checks="MagicNumber"
              files=".*Properties\.java"/>
</suppressions>